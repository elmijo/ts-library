{
  "name": "@elmijo/ts-library",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "This is a template repository to create Typescript library easier and faster.",
  "main": "lib/index.js",
  "types": "lib/types/index.d.ts",
  "repository": "https://github.com/ElMijo/ts-library.git",
  "author": "Jerry Anselmi <jerry.anselmi@gmail.com>",
  "license": "MIT",
  "keywords": [],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "rimraf ./lib && tsc",
    "test": "jest --testPathPattern __tests__/unit",
    "test:integration": "jest --testPathPattern __tests__/integration",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint --fix . && prettier --write .",
    "docs": "rimraf ./.docs && typedoc",
    "postinstall": "node -e \"process.exit(process.env.NODE_ENV === 'production'?1:0)\" &&  husky install || echo 'Git hooks skipped'",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "branchlint": "^0.0.2",
    "eslint": "^8.32.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "jsdoc-plugin-typescript": "^2.2.0",
    "lint-staged": "^13.1.0",
    "pinst": "^3.0.0",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.24",
    "typescript": "^4.9.4",
    "typescript-eslint": "^0.0.1-alpha.0"
  },
  "resolutions": {
    "ansi-regex": "~5.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "printWidth": 80
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "globals": {
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "eslint-plugin-tsdoc",
      "prettier"
    ],
    "ignorePatterns": [
      "**/lib/**/*.js",
      "**/*.d.ts"
    ],
    "rules": {
      "tsdoc/syntax": "warn",
      "prettier/prettier": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-empty-interface": [
        "error",
        {
          "allowSingleExtends": true
        }
      ]
    }
  },
  "lint-staged": {
    "*.{ts,json,yml}": [
      "eslint .",
      "prettier --check ."
    ]
  }
}
